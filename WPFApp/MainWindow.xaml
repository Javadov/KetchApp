<Window x:Class="WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid Margin="30">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Välkommen till Adressboken" HorizontalAlignment="Center" Margin="30"/>
            <Button Name="CreateContactButton" Content="Skapa en kontakt" Margin="180 10 180 10" Padding="5"/>
            <Button Name="ShowAllContactsButton" Content="Visa alla kontakter" Margin="180 10 180 10" Padding="5"/>
            <Button Name="ShowSpecificContactButton" Content="Visa en specifik kontakt" Margin="180 10 180 10" Padding="5"/>
            <Button Name="DeleteContactButton" Content="Ta bort en specifik kontakt" Click="DeleteContactButton_Click" Margin="180 10 180 10" Padding="5"/>
        </StackPanel>
    </Grid>

</Window>

